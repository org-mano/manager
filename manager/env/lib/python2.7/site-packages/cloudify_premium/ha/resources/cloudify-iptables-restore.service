[Unit]
Description=iptables restore service
Before=cloudify-consul.service cloudify-consul-watcher.service cloudify-consul-recovery-watcher.service

[Service]
ExecStartPre=/bin/touch /etc/sysconfig/iptables
ExecStart=/bin/sh -c "/sbin/iptables-restore </etc/sysconfig/iptables"
Type=oneshot
RemainAfterExit=true
[Install]
WantedBy=multi-user.target
